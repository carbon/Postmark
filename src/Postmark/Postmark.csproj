<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Postmark</AssemblyName>
    <VersionPrefix>0.14.0</VersionPrefix>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>

    <!-- Package Properties-->
    <Authors>iamcarbon</Authors>
    <Copyright>© Jason Nelson</Copyright>
    <Description>A modern netstandard library for Postmark.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>Carbon.Postmark</PackageId>
    <PackageTags>postmark</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Carbon.Json" Version="1.9.0" />
  </ItemGroup>

</Project>